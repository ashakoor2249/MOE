<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="practice.Pages.PriorityOneMafPage"
             Title="Priority One Maf">

    <ScrollView
               Background="#ff0000">
        <Border
           HeightRequest="600"
           WidthRequest="600"
           Stroke="#C49B33"
           StrokeThickness="4"
           Background="White"
           Padding="16,8"
           HorizontalOptions="Center">
        
        <Border.StrokeShape>
            <RoundRectangle
                           CornerRadius="40,0,0,40">
            </RoundRectangle>
        </Border.StrokeShape>
        
        <VerticalStackLayout
                            Padding="10"
                            Spacing="40"
                            VerticalOptions="Center">

                <HorizontalStackLayout
                                      Spacing="10"
                                      HorizontalOptions="Center">
                    <ListView
                       x:Name="selectPlaza"
                       ItemSelected="PlazaSelected"
                       HorizontalOptions="Center"
                       VerticalOptions="Center" 
                       VerticalScrollBarVisibility="Always">
                    </ListView>

                    <Picker
                   HorizontalOptions="Center"
                   FontSize="16"
                   FontFamily="Times"
                   Title="Select Lane/Lane Type">
                    </Picker>

                    <Picker
                   HorizontalOptions="Center"
                   FontSize="16"
                   FontFamily="Times"
                   Title="Select Technician">
                    </Picker>

                </HorizontalStackLayout>
                
            <Entry
                  FontFamily="Times"
                  FontSize="16"
                  Placeholder="Enter the Problem"
                  PlaceholderColor="DarkSlateGray">
                
            </Entry>

            <Entry
                  FontFamily="Times"
                  FontSize="16"
                  Placeholder="Enter BOM Item"
                  PlaceholderColor="DarkSlateGray">

            </Entry>

            <Entry
                  FontFamily="Times"
                  FontSize="16"
                  Placeholder="Enter MAF Number"
                  PlaceholderColor="DarkSlateGray">

            </Entry>

            <Editor
                  HeightRequest="100"
                  FontFamily="Times"
                  FontSize="16"
                  Placeholder="Action Taken"
                  PlaceholderColor="DarkSlateGray"
                  AutoSize="TextChanges">
                
            </Editor>



        </VerticalStackLayout>

    </Border>
    </ScrollView>

</ContentPage>