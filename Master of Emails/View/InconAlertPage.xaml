<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="practice.Pages.InconAlertPage"
             Title="Incon Alert">

    <ScrollView
                Background="#00FFFF">
        <Border
           HeightRequest="600"
           WidthRequest="600"
           Stroke="#C49B33"
           StrokeThickness="4"
           Background="white"
           Padding="16,8"
           HorizontalOptions="Center">

            <Border.StrokeShape>
                <RoundRectangle
                           CornerRadius="40,0,0,40">
                </RoundRectangle>
            </Border.StrokeShape>

            <VerticalStackLayout 
                                VerticalOptions="Center"
                                HorizontalOptions="Center"
                                Padding="5"
                                Spacing="20">

                <HorizontalStackLayout
                                      Spacing="10"
                                      HorizontalOptions="Center">
                    <Picker
                       x:Name="select_plaza"
                       HorizontalOptions="Center"
                       FontSize="16"
                       FontFamily="Times"
                       Title="Select Plaza">
                    </Picker>

                    <Picker
                       x:Name="lane"
                       HorizontalOptions="Center"
                       FontSize="16"
                       FontFamily="Times"
                       Title="Select Lane/Lane Type">
                    </Picker>
                </HorizontalStackLayout>

                <HorizontalStackLayout   
                                      Spacing="10"
                                      HorizontalOptions="Center">
                    <Picker
                        x:Name="select_requestor"
                        HorizontalOptions="Center"
                        FontSize="16"
                        FontFamily="Times"
                        Title="Select Requestor">
                    </Picker>

                    <Entry
                      x:Name="requestor_phone_number"
                      FontFamily="Times"
                      FontSize="16"
                      Placeholder="Requestor Phone Number"
                      PlaceholderColor="DarkSlateGray">
                    </Entry>
                </HorizontalStackLayout>
                 

                <HorizontalStackLayout
                                      Spacing="10"
                                      HorizontalOptions="Center">
                    <Label
                          VerticalOptions="Center"
                          Text="Select Date/Time"
                          FontSize="16"
                          FontFamily="Times">
                    </Label>
                    
                    <DatePicker
                               x:Name="date"
                               FontSize="16"
                               FontFamily="Times">
                    </DatePicker>

                    <TimePicker
                               x:Name="time"
                               FontSize="16"
                               FontFamily="Times">
                    </TimePicker>
                    
                </HorizontalStackLayout>

                <HorizontalStackLayout
                                      HorizontalOptions="Center"
                                      Spacing="10">
                    <Label
                          VerticalOptions="Center"
                          Text="Duration Of Work"
                          FontSize="16"
                          FontFamily="Times">
                    </Label>

                    <Stepper 
                            x:Name="duration_stepper"
                            Maximum="100"
                            Minimum="1">
                    </Stepper>

                    <Label 
                          FontSize="16"
                          Text="{Binding Source={x:Reference duration_stepper}, Path=Value, StringFormat='{0:F0}'}"
                          HorizontalOptions="Center"
                          VerticalOptions="Center" />

                    <VerticalStackLayout>
                        <RadioButton
                                    FontSize="16"
                                    FontFamily="Times"
                                    x:Name="hours"
                                    Content="Hours"
                                    Value="Hour(s)">
                        </RadioButton>

                        <RadioButton
                                    FontSize="16"
                                    FontFamily="Times"
                                    x:Name="minuets"
                                    Content="Minuets"
                                    Value="Minuets">
                        </RadioButton>
                    </VerticalStackLayout>
                </HorizontalStackLayout>
          
                <Entry
                      FontFamily="Times"
                      FontSize="16"
                      Placeholder="Incident/ESR"
                      PlaceholderColor="DarkSlateGray">
                </Entry>

                <Editor
                       HeightRequest="90"
                       FontFamily="Times"
                       FontSize="16"
                       Placeholder="Reason"
                       PlaceholderColor="DarkSlateGray"
                       AutoSize="TextChanges">
                </Editor>

            </VerticalStackLayout>

        </Border>
    </ScrollView>

</ContentPage>